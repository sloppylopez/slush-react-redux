{
  "firebase": "sloppy",
  "public": ".",
  "ignore": [
    "firebase.json",
    "package.json",
    "server.js",
    "**/.*",
    "*.log",
    ".*ignore",
    "**/node_modules/**",
    "bin/**",
    "LICENSE",
    "*.md",
    ".eslintrc",
    ".travis.yml",
    "Guardfile"
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "rules": "config/security-rules.json",
  "redirects": [ {
    "source" : "/elephantseed",
    "destination" : "/microsites/elephantseed",
    "type" : 301
  }
  ],
  "headers": [
    {
      "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "30000"
        },
        {
          "key": "Cache-Control",
          "value": "max-age=31536000"
        }
      ]
    },
    {
      "source": "**/*.@(*.js|*.css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31536000"
        }
      ]
    },
    {
      "source": "**/*.@(jpg|jpeg|gif|png)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31536000"
        }
      ]
    },
    {
      "source": "404.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=10000"
        }
      ]
    }
  ]
}